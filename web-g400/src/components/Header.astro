<style>
   
/* ==========================================
   6. HEADER Y NAVEGACIÓN
========================================== */
.header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background-color: transparent;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease;
}

.header.scrolled {
    padding: 0.5rem 0;
    background-color: rgba(240, 245, 255, 0.95);
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
}

.header.scrolled .logo img {
    filter: none;
}

.header.scrolled .nav-link {
    color: black;
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
}

.logo {
    display: flex;
    align-items: center;
}

.logo img {
    filter: brightness(0) invert(1);
    height: 50px;
}

.logo span {
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--white);
    margin-left: 0.5rem;
    position: relative;
    display: inline-block;
}

.logo span::after {
    content: '';
    position: absolute;
    width: 40%;
    height: 3px;
    bottom: 0;
    left: 0;
    background: linear-gradient(90deg, var(--primary), var(--accent));
    border-radius: 10px;
}

.nav-menu {
    display: flex;
    list-style: none;
}

.nav-item {
    margin-left: 2rem;
}

.nav-link {
    color: var(--white);
    font-weight: 500;
    position: relative;
    padding: 0.5rem 0;
}

.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--primary), var(--secondary));
    transition: all 0.3s ease;
}

.nav-link:hover {
    color: var(--accent);
}

.nav-link:hover::after {
    width: 100%;
}

.nav-link.active {
    color: var(--accent);
}

.nav-link.active::after {
    width: 100%;
    background: linear-gradient(90deg, var(--primary), var(--accent));
}

.mobile-menu-toggle {
    display: none;
    cursor: pointer;
    font-size: 1.5rem;
    color: var(--white);
}
</style>
