---

<!-- Product Detail Section -->
<section class="product-detail">
    <div class="container">
        <div class="product-detail-container">
            <div class="product-gallery">
                <div class="product-main-image">
                    <img src="escudo_por_defecto.png" alt="Producto" id="main-product-image">
                </div>
                <div class="product-thumbnails">
                    <div class="product-thumbnail active">
                        <img src="escudo_por_defecto.png" alt="Thumbnail 1" onclick="changeImage('escudo_por_defecto.png')">
                    </div>
                    <div class="product-thumbnail">
                        <img src="InventarioPatrimonio.png" alt="Thumbnail 2" onclick="changeImage('InventarioPatrimonio.png')">
                    </div>
                    <div class="product-thumbnail">
                        <img src="PortalEmpleado.png" alt="Thumbnail 3" onclick="changeImage('PortalEmpleado.png')">
                    </div>
                    <div class="product-thumbnail">
                        <img src="Nomina.png" alt="Thumbnail 4" onclick="changeImage('Nomina.png')">
                    </div>
