<style>
/* ==========================================
   2. GALERÍA Y DETALLES DEL PRODUCTO
========================================== */
.product-detail {
    margin-top: 5.3rem;
    padding: 4rem 0;
    background-color: var(--white);
}

.product-detail-container {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
}

.product-gallery {
    flex: 0 0 45%;
}

.product-main-image {
    width: 100%;
    height: 400px;
    border-radius: 15px;
    overflow: hidden;
    margin-bottom: 1.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    position: relative;
}

.product-main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.4s ease;
}

.product-thumbnails {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
}

.product-thumbnail {
    width: 80px;
    height: 80px;
    border-radius: 10px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    border: 2px solid transparent;
}

.product-thumbnail:hover {
    transform: translateY(-5px);
}

.product-thumbnail.active {
    border-color: var(--primary);
}

.product-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.product-info {
    flex: 0 0 45%;
}

.product-category {
    display: inline-block;
    padding: 0.3rem 1rem;
    background-color: rgba(0, 102, 204, 0.1);
    border-radius: 30px;
    color: var(--primary);
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.product-title {
    font-size: 2.5rem;
    color: var(--dark);
    margin-bottom: 1.5rem;
}

.product-rating {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
}

.product-stars {
    display: flex;
    margin-right: 1rem;
}

.product-star {
    color: #ffc107;
    font-size: 1.2rem;
    margin-right: 0.2rem;
}

.product-reviews {
    color: var(--gray);
    font-size: 0.9rem;
}

.product-description {
    margin-bottom: 2rem;
    color: var(--gray);
}

.product-features-title {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--dark);
}

.product-features-list {
    list-style: none;
    margin-bottom: 2rem;
}

.product-feature-item {
    margin-bottom: 0.8rem;
    display: flex;
    align-items: flex-start;
}

.product-feature-item i {
    color: var(--success);
    margin-right: 0.8rem;
    margin-top: 0.3rem;
}

.product-clients-title {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--dark);
}

.product-clients {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.product-client {
    width: 100px;
    height: 100px;
    background-color: var(--light);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    transition: all 0.3s ease;
}

.product-client:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
}

.product-client img {
    max-width: 100%;
    max-height: 100%;
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;
}

.product-client:hover img {
    filter: grayscale(0%);
    opacity: 1;
}

.product-cta {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
}
.btn-outline{
    color: var(--primary);
    border: 2px solid var(--primary);
}

/* Ajuste específico para los botones en la página de detalle de producto */
.product-cta .btn-outline {
    color: var(--primary);
    border: 2px solid var(--primary);
}

.product-cta .btn-outline:hover {
    background-color: var(--primary);
}


.fa-circle-check{
    margin-right: 0.5rem;   
}
/* ==========================================
   3. TABS DEL PRODUCTO
========================================== */
.product-tabs {
    margin-top: 4rem;
}

.tabs-nav {
    display: flex;
    border-bottom: 1px solid #e1e1e1;
    margin-bottom: 2rem;
}

.tab-item {
    padding: 1rem 2rem;
    cursor: pointer;
    font-weight: 600;
    color: var(--gray);
    position: relative;
    transition: all 0.3s ease;
}

.tab-item::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--primary);
    transition: all 0.3s ease;
}

.tab-item:hover {
    color: var(--primary);
}

.tab-item.active {
    color: var(--primary);
}

.tab-item.active::after {
    width: 100%;
}

.tab-content {
    display: none;
    animation: fadeIn 0.5s ease;
}

.tab-content.active {
    display: block;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ==========================================
   4. TABLA DE ESPECIFICACIONES TÉCNICAS
========================================== */
.specs-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 2rem;
}

.specs-table tr:nth-child(odd) {
    background-color: rgba(0, 0, 0, 0.02);
}

.specs-table th,
.specs-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #e1e1e1;
}

.specs-table th {
    font-weight: 600;
    color: var(--dark);
    width: 30%;
}

/* ==========================================
   5. GALERÍA DE CAPTURAS DE PANTALLA
========================================== */
.screenshots-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.screenshot-item {
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    cursor: pointer;
}

.screenshot-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

.screenshot-item img {
    width: 100%;
    height: 180px;
    object-fit: cover;
}

/* ==========================================
   6. SECCIÓN DE FAQ (PREGUNTAS FRECUENTES)
========================================== */
.faq-item {
    margin-bottom: 1.5rem;
    border: 1px solid #e1e1e1;
    border-radius: 10px;
    overflow: hidden;
}

.faq-question {
    padding: 1.2rem 1.5rem;
    background-color: #f9f9f9;
    font-weight: 600;
    color: var(--dark);
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
}

.faq-question:hover {
    background-color: #f0f0f0;
}

.faq-question i {
    transition: all 0.3s ease;
}

.faq-item.active .faq-question {
    background-color: var(--primary);
    color: var(--white);
}

.faq-item.active .faq-question i {
    transform: rotate(180deg);
}

.faq-answer {
    padding: 0 1.5rem;
    max-height: 0;
    overflow: hidden;
    transition: all 0.3s ease;
}

.faq-item.active .faq-answer {
    padding: 1.5rem;
    max-height: 500px;
}

