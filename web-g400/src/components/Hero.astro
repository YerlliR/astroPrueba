<style>


/* ==========================================
   7. HERO SECTION
========================================== */
.hero {
    position: relative;
    padding-top: 10rem;
    padding-bottom: 8rem;
    background: var(--dark-blue);
    color: var(--white);
    overflow: hidden;
}

.hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(ellipse at center, rgba(0, 0, 0, 0.7) 0%, rgba(19, 77, 143, 0.9) 100%);
    overflow: hidden;
    z-index: 1;
}

.hero-bg::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.2;
    z-index: -1;
}

/* Código animado */
.code-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    opacity: 0.15;
    overflow: hidden;
}

.code-line {
    position: absolute;
    font-family: 'Space Mono', monospace;
    color: var(--accent);
    font-size: 14px;
    white-space: nowrap;
    animation: codeFall linear infinite;
}

@keyframes codeFall {
    from {
        transform: translateY(-100%);
    }
    to {
        transform: translateY(1000px);
    }
}

.hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.hero-text {
    flex: 0 0 50%;
    padding-right: 2rem;
}

.hero-eyebrow {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: rgba(0, 102, 204, 0.1);
    border-radius: 30px;
    color: var(--accent);
    font-weight: 600;
    margin-bottom: 1rem;
    border-left: 3px solid var(--accent);
}

.hero-title {
    font-size: 3.5rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--white);
    animation: fadeInUp 1s ease;
    position: relative;
}

.hero-title span {
    color: var(--accent);
    position: relative;
    display: inline-block;
}

.hero-title span::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 8px;
    bottom: 8px;
    left: 0;
    background: var(--accent);
    opacity: 0.3;
    z-index: -1;
}

.hero-subtitle {
    font-size: 1.2rem;
    margin-bottom: 2rem;
    animation: fadeInUp 1s ease 0.2s;
    animation-fill-mode: both;
    color: rgba(255, 255, 255, 0.8);
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    animation: fadeInUp 1s ease 0.4s;
    animation-fill-mode: both;
}

.hero-image {
    flex: 0 0 45%;
    position: relative;
    animation: floatAnimation 6s ease-in-out infinite;
}

.hero-image img {
    width: 100%;
    border-radius: 20px;
    position: relative;
    z-index: 2;
}

.hero-image::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0) 150%);
    border-radius: 20px;
    z-index: 1;
    opacity: 0.5;
    animation: pulseEffect 4s ease-in-out infinite;
    filter: blur(30px);
}

@keyframes pulseEffect {
    0% {
        transform: scale(1);
        opacity: 0.6;
    }
    50% {
        transform: scale(1.05);
        opacity: 0.8;
    }
    100% {
        transform: scale(1);
        opacity: 0.6;
    }
}

</style>