    position: relative;
    overflow: hidden;
    border-radius: 50px;
    background: rgba(255, 255, 255, 0.1);
}

.newsletter-input {
    background: transparent;
    border: none;
    padding: 15px 20px;
    width: 100%;
    color: white;
    font-size: 16px;
    outline: none;
}

.newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.6);
}

