    align-items: center;
    justify-content: center;
    margin-right: 15px;
    color: var(--secondary);
    font-size: 16px;
    transition: var(--transition);
}

.contact-item:hover .contact-icon {
    background: var(--gradient-primary);
    color: white;
    transform: scale(1.1);
}

.contact-text {
    color: rgba(255, 255, 255, 0.8);
    transition: var(--transition);
    font-size: 16px;
    line-height: 1.5;
}

.contact-item:hover .contact-text {
    color: white;
}

